# ==================================================
# CONFIGURACIÓN DEL SISTEMA - UMSA TRANSPORTE
# Backend: Sistema de la Unidad de Transporte
# Universidad Mayor de San Andrés
# ==================================================

# ==================================================
# 1. CONFIGURACIÓN DEL SERVIDOR
# ==================================================

# Entorno de ejecución (development, production, testing)
NODE_ENV=production

# Puerto donde correrá el servidor (Railway lo asigna automáticamente)
PUERTO=3001

# Host del servidor
HOST=0.0.0.0

# URL de la aplicación (para CORS y redirecciones)
APP_URL=https://tu-app.vercel.app
FRONTEND_URL=https://tu-app.vercel.app

# ==================================================
# 2. BASE DE DATOS MYSQL - RAILWAY/PLANETSCALE
# ==================================================

# Servidor de base de datos (Railway/PlanetScale lo proporciona)
DB_HOST=tu-railway-db-host.railway.app

# Puerto de MySQL
DB_PORT=3306

# Nombre de la base de datos
DB_NAME=railway

# Usuario de la base de datos (Railway/PlanetScale lo proporciona)
DB_USER=root

# Contraseña de la base de datos (Railway/PlanetScale lo proporciona)
DB_PASSWORD=tu_password_de_railway

# SSL para conexiones seguras (true para PlanetScale, false para local)
DB_SSL=false

# Conexión pool configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# ==================================================
# 3. AUTENTICACIÓN JWT
# ==================================================

# Clave secreta para JWT (¡CAMBIAR EN PRODUCCIÓN!)
JWT_SECRET=tu_jwt_secret_key_super_seguro_cambiar_en_produccion

# Tiempo de expiración del token
JWT_EXPIRES_IN=24h

# Tiempo de expiración para refresh tokens (opcional)
JWT_REFRESH_EXPIRES_IN=7d

# ==================================================
# 4. CONFIGURACIÓN DE CORREO ELECTRÓNICO
# ==================================================

# Servidor SMTP para notificaciones
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false

# Credenciales del correo para notificaciones
EMAIL_USER=tu-correo@gmail.com
EMAIL_PASSWORD=tu_app_password_de_gmail

# Nombre que aparecerá en los correos
EMAIL_FROM_NAME="Sistema de Transporte UMSA"
EMAIL_FROM_ADDRESS=notificaciones.umsa@umsa.bo

# ==================================================
# 5. CONFIGURACIÓN DE SEGURIDAD
# ==================================================

# Límite de peticiones por IP (rate limiting)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Tamaño máximo de archivos (en bytes) - 10MB
MAX_FILE_SIZE=10485760

# Habilitar logs detallados
DEBUG_MODE=false

# ==================================================
# 6. CONFIGURACIÓN DE ARCHIVOS Y STORAGE
# ==================================================

# Directorio para almacenar códigos QR
QR_CODES_DIR=./public/qr-codes

# Directorio para almacenar reportes PDF
REPORTS_DIR=./public/reports

# ==================================================
# 7. CONFIGURACIÓN DE NOTIFICACIONES
# ==================================================

# Habilitar notificaciones por correo
NOTIFICATIONS_ENABLED=true

# Habilitar notificaciones para administradores
ADMIN_NOTIFICATIONS_ENABLED=true

# ==================================================
# 8. CONFIGURACIÓN DE BACKUP Y MANTENIMIENTO
# ==================================================

# Habilitar respaldos automáticos
AUTO_BACKUP_ENABLED=false

# Frecuencia de respaldos (en horas)
BACKUP_FREQUENCY_HOURS=24
